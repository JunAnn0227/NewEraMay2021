<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity">

    <TextView
        android:id="@+id/tvAmountCoffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount of Coffee"
        android:textSize="22sp"
        android:layout_margin="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/tvAmountCoffee"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="-"
        android:textSize="25sp"
        android:layout_below="@id/tvAmountCoffee"
        android:layout_toLeftOf="@id/tvAmount"/>

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="+"
        android:textSize="25sp"
        android:layout_below="@id/tvAmountCoffee"
        android:layout_toRightOf="@id/tvAmount"/>

    <TextView
        android:id="@+id/txtTopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toppings: "
        android:textSize="22sp"
        android:layout_margin="15dp"
        android:layout_below="@id/tvAmount"/>

    <CheckBox
        android:id="@+id/checkCream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cream ($1)"
        android:textSize="22sp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/txtTopping"/>

    <CheckBox
        android:id="@+id/checkCookie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cookie Flakes ($2)"
        android:textSize="22sp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/checkCream"/>

    <CheckBox
        android:id="@+id/checkChocolate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chocolate Chip ($3)"
        android:textSize="22sp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/checkCookie"/>

    <Button
        android:id="@+id/btnMakeOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Order"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:backgroundTint="@color/design_default_color_secondary"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/checkChocolate"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_below="@id/btnMakeOrder"
        android:layout_margin="10dp"/>

</RelativeLayout>